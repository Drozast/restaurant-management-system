{
  "name": "mise-en-place-system",
  "version": "1.0.0",
  "description": "Sistema de gestión de mise en place para pizzería",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "vite",
    "build": "vite build",
    "build:check": "tsc && vite build",
    "build:server": "tsc --project tsconfig.node.json",
    "start": "node --import tsx server/index.ts",
    "preview": "vite preview",
    "seed": "tsx server/database/seed-waddington.ts",
    "db:reset": "rm -f data/pizza.db && npm run seed"
  },
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^9.2.2",
    "clsx": "^2.0.0",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.300.0",
    "node-cron": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.20.1",
    "recharts": "^3.5.1",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "tailwind-merge": "^2.2.0",
    "tsx": "^4.7.0",
    "xlsx": "^0.18.5",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
